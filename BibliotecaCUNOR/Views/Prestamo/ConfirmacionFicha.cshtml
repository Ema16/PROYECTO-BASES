
@{
    ViewData["Title"] = "ConfirmacionFicha";
}

@model BibliotecaCUNOR.Models.Prestamo

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Prestamos</title>
    <!--DATEPICKER-->
    <link rel="stylesheet" type="text/css" href="~/calendario/jquery-ui-1.12.1.custom/jquery-ui.css" />
    <script src="~/calendario/jquery-ui-1.12.1.custom/jquery-ui.js"></script>

    <!--Son referencias que agregamos-->
    <!--Tabla de usuarios y libros
        <script src="~/lib/jquery/dist/jquery-ui.min.js" type="text/javascript"></script>
        <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    -->
    <!--CHOSEN-->
    <script src="~/chosen/chosen.jquery.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <link rel="stylesheet" href="~/chosen/chosen.css" />
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1 class="all-tittles">Sistema bibliotecario <small>Préstamos</small></h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 lead">
                <ol class="breadcrumb">
                    <li><a href="~/Prestamo/Ficha">Nuevo Prestamo</a></li>
                    <li class="active">Confirmacion</li>
                </ol>
            </div>
        </div>
    </div>

    <!--ESTO SE QUEDA-->
    <div class="container-fluid">
        <div class="col-xs-12">
            <div class="title-flat-form1 title-flat-blue">Confirmacion</div>
            <div class="panel-body">
                <table class="table-active">
                    <tr>
                        <th colspan="2">Prestamo de Libros</th>
                    </tr>
                    <tr>
                        <th>Referencia</th>
                        <td>&nbsp;&nbsp;@Model.CodPrestamo</td>
                    </tr>
                    <tr>
                        <th>Fecha del Prestamo</th>
                        <td>&nbsp;&nbsp;@Model.FechaPrestamo</td>
                    </tr>
                </table>
            </div>
            <hr />
            <form class="form-padding1">
                <div class="panel  panel-footer" style="padding-left:15%; padding-right:15%;">
                    <div class="panel-heading"></div>
                    <table class="table">
                        <thead>
                            <tr>
                                <td colspan="2" style="text-align:center">El prestamo ha sido aplicado exitosamente</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Categoria</th>
                                <td>@Model.Tipo</td>
                            </tr>
                            <tr>
                                <th>INSTITUCION</th>
                                <td>CUNOR</td>
                            </tr>
                            <tr>
                                <th>Libros Prestados</th>
                                <td>
                                    <ul class="list-group">
                                        @foreach (var item in Model.DetPrestamo)
                                        {
                                            <li>@item.CodLibroNavigation.Titulo</li>

                                        }

                                    </ul>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <hr />
                    <center>
                        <label><strong>Carnet&nbsp;&nbsp;</strong>@Model.CodUsuarioNavigation.Usuario1&nbsp; - &nbsp;@Model.CodUsuarioNavigation.Nombre @Model.CodUsuarioNavigation.Apellido</label>
                    </center>
                    <p style="text-align:center">
                        Nota: Este documento es un comprobante electronico del prestamo de los Libros prestados.
                        Los libros anteriormente mencionados quedan a responsabilidad del estudiante que los ha solicitado
                    </p>
                </div>
            </form>
        </div>
        <div class="col-xs-12">
            <center>
                <form asp-action="Imprimir">
                    <button type="submit" formtarget="_blank" class="btn btn-info" ><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
                    <input name="CodigoPrestamo" type="hidden" value="@Model.CodPrestamo" />
                </form>
                <br />
                <form asp-action="Descargar">
                    <button type="submit" class="btn btn-primary"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                    <input name="CodigoPrestamo" type="hidden" value="@Model.CodPrestamo" />
                </form>
            </center>
        </div>
    </div>
</body>

</html>



