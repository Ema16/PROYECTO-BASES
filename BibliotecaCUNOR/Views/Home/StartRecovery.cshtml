@model BibliotecaCUNOR.Models.StartRecoveryViewModel
@{
    ViewData["Title"] = "StartRecovery";
}

<h1>StartRecovery</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="StartRecovery">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CorreoElectornico" class="control-label"></label>
                <input asp-for="CorreoElectornico" class="form-control" />
                <span asp-validation-for="CorreoElectornico" class="text-danger"></span>
            </div>
            @{
                if (TempData.Peek("Mensaje") != null)
                {
                    <div class="alert alert-danger">@TempData.Peek("Mensaje") </div>
                }
            }

            <div class="form-group">
                <input type="submit" value="Enviar Correo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


