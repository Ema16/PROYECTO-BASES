@model BibliotecaCUNOR.Models.Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalle del Usuario </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ol class="breadcrumb">
                    <li><a href="#" class="close" data-dismiss="modal">Usuarios Biblioteca</a></li>
                    <li class="active">@(Model.Nombre+" "+ @Model.Apellido)</li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos del Usuario</div>
                    <div class="panel-body"></div>
                    <dl class="dl-horizontal">
                        <dt>Usuario</dt>
                        <dd>@Model.Nombre @Model.Apellido</dd>
                        @if (Model.CodCarreraNavigation != null)
                        {
                            <dt>Carrera</dt>
                            <dd>@Model.CodCarreraNavigation.Carrera1</dd>
                        }
                        else
                        {
                            <dt>Carrera</dt>
                            <dd>-----</dd>
                        }
                        <dt>Tipo de Usuario</dt>
                        <dd>@Model.CodTipousuarioNavigation.Tipo</dd>
                    </dl>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos de la Cuenta</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Correo Electronico</dt>
                            <dd>@Model.CorreoElectronico</dd>
                            <dt>Carnet/Usuario</dt>
                            <dd>@Model.Usuario1</dd>
                            <dt>Telefono</dt>
                            <dd>@Model.Telefono</dd>
                            <dt>Estado</dt>
                            <dd>@Model.Estado</dd>
                            <dt>Rol Actual del Usuario</dt>
                            <dd>@Model.CodRolusuarioNavigation.Rol</dd>

                        </dl>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos a modificar</div>
                    <div class="panel-body">
                       
                        <form asp-action="Edit" asp-controller="Usuarios">
                            <div class="form-group">
                                <input id="coduser" type="hidden" asp-for="CodUsuario" />
                                <label asp-for="CodUsuario" class="control-label"></label>
                                <select asp-for="CodRolusuario" class="form-control" asp-items="ViewBag.CodRolusuario"></select>
                                <span asp-validation-for="CodRolusuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CodTipousuario" class="control-label"></label>
                                <select asp-for="CodTipousuario" class="form-control" asp-items="ViewBag.CodTipousuario"></select>
                                <span asp-validation-for="CodTipousuario" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal-footer">

                <button type="button" class="btn-primary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn-primary" data-save="modal">Guardar</button>

            </div>
        </div>

    </div>
</div>

