@model BibliotecaCUNOR.Models.TrabajoGraduacion


<div class="modal fade" id="addEditor">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addEditorLabel">Detalle del Trabajo <strong>@Model.Titulo</strong></h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <ol class="breadcrumb">
                    <li><a href="#" class="close" data-dismiss="modal">Trabajos de Graduacion</a></li>
                    <li class="active">@(Model.NombreAutor+" "+ @Model.ApellidoAutor)</li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    <div class="panel-body"></div>
                    <dl class="dl-horizontal">
                        <dt>Autor</dt>
                        <dd><a href="@Url.Action("Index","TrabajoGraduacions", new { parametro1 = Model.NombreAutor })">@Model.NombreAutor  @Model.ApellidoAutor</a></dd>
                        <dt>Titulo</dt>
                        <dd>@Model.Titulo / @Model.ApellidoAutor @Model.NombreAutor</dd>
                        <dt>Tipo</dt>
                        <dd>@Model.CodTipotrabajoNavigation.Tipo</dd>
                        @if (Model.CodCat != null)
                        {
                            <dt>Categoria Trabajo de Graduacion</dt>
                            <dd>@Model.CodCatNavigation.Categoria</dd>
                        }


                        <dt>Autor</dt>
                        <dd>@Model.NombreAutor @Model.ApellidoAutor</dd>
                        <dt>Recurso Digital</dt>
                        <dd><a target="_blank" href="@Url.Content("~/upload/"+ Model.RecursoDigital)"> Descargar </a></dd>
                    </dl>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">Temas</div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (var item in Model.TrabajoPalabraClave)
                            {
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index","TrabajoGraduacions", new { parametro = item.CodPalabraClave })">@Html.DisplayFor(modelItem => item.CodPalabraClaveNavigation.PalabraClave1) </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>                    
            </div>

            <div class="modal-footer">

                <button type="button" class="btn-primary" data-dismiss="modal">Cerrar</button>

            </div>
        </div>

    </div>
</div>
